@import url('https://fonts.googleapis.com/css2?family=Noto+Sans&display=swap');
body
  display flex
  justify-content center
  align-items center
  margin 0
  min-height 100vh
  flex-direction column
  font-family 'Noto Sans', sans-serif
  background-color #ABB4EE
  gap 40px
  h2 // body h2 {}
    color #4D5BB8
    margin 0
  &>h1 // body>h1
    color #2D356B
    margin 0
  table
    text-align center
    width 50%
    height 200px
    background-color rgba(171, 180, 238, 0.3)
    border-radius 10px
    padding 10px
    box-shadow 2px 1px 20px 2px rgba(0, 0, 255, .18)
    thead
      text-transform uppercase
      color #2D356B
      font-weight bold
      background-color rgba(255,255,155, 0.6)
    td
      border-bottom solid 1px rgba(0, 0, 255, .1)
      border-right solid 1px rgba(0, 0, 255, .1)
    tbody
      color #21264d